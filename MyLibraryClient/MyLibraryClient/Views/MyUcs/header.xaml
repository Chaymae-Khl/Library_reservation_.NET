<UserControl x:Class="MyLibraryClient.Views.MyUcs.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyLibraryClient.Views.MyUcs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="358*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="129*"/>
            <ColumnDefinition Width="555*"/>
            <ColumnDefinition Width="116*"/>
        </Grid.ColumnDefinitions>
        <Button Command="{Binding LogoutCommand}" Content="Logout" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="80" Grid.Column="2" Grid.Row="1" Background="#FF050301" Foreground="White" Margin="0,4,0,0"/>
        <Button Content="Menu" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="79" Command="{Binding MenuButton}" Background="#FF0B0B0B" Foreground="White" Grid.Row="1"/>

    </Grid>
</UserControl>

<UserControl x:Class="MyLibraryClient.Views.MyUcs.MenuUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyLibraryClient.Views.MyUcs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFF4E2E2">
        <Button Content="Manage Students" HorizontalAlignment="Left" Margin="294,78,0,0" VerticalAlignment="Top" Height="58" Width="185" FontSize="16" Command="{Binding StudentButton}"/>
        <Button Content="Manage Books" HorizontalAlignment="Left" Margin="294,161,0,0" VerticalAlignment="Top" Height="64" Width="185" FontSize="16" Command="{Binding BookButton}"/>
        <Button Content="Manage Reservation" HorizontalAlignment="Left" Margin="294,257,0,0" VerticalAlignment="Top" Height="57" Width="185" FontSize="16" Command="{Binding ReservationButton}"/>

    </Grid>
</UserControl>
